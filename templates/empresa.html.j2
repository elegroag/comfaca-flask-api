  3. DATOS DEL REPRESENTANTE LEGAL
</div>
<table>
  <tr>
    <td class="label-bg" style="width: 15%">
      <label class="form-label">Número de Identificación</label>
    </td>
    <td style="width: 20%">
      <span class="text">{{cedrep}}</span>
    </td>
    <td class="label-bg" style="width: 20%">
      <label class="form-label">Tipo de Identificación:</label>
    </td>
    <td style="width: 60%">
      <div class="d-flex">
        <table class="table-anidada">
          <tr>
            <td>
              <div class="list-item">
                <span class="small-checkbox{{ ' active' if tipdoc=='3' else '' }}"></span>
                <span>NIT</span>
              </div>
            </td>
            <td>
              <div class="list-item">
                <span class="small-checkbox{{ ' active' if tipdoc=='1' else '' }}"></span>
                <span>C.C.</span>
              </div>
            </td>
            <td>
              <div class="list-item">
                <span class="small-checkbox{{ ' active' if tipdoc=='2' else '' }}"></span>
                <span>T.I.</span>
              </div>
            </td>
            <td>
              <div class="list-item">
                <span class="small-checkbox{{ ' active' if tipdoc=='4' else '' }}"></span>
                <span>C.E.</span>
              </div>
            </td>
            <td>
              <div class="list-item">
                <span class="small-checkbox{{ ' active' if tipdoc=='13' else '' }}"></span>
                <span>VISA</span>
              </div>
            </td>
            <td>
              <div class="list-item">
                <span class="small-checkbox{{ ' active' if tipdoc=='6' else '' }}"></span>
                <span>PAS.</span>
              </div>
            </td>
            <td>
              <div class="list-item">
                <span class="small-checkbox{{ ' active' if tipdoc=='8' else '' }}"></span>
                <span>P.E.P.</span>
              </div>
            </td>
            <td>
              <div class="list-item">
                <span class="small-checkbox{{ ' active' if tipdoc=='11' else '' }}"></span>
                <span>C.D.</span>
              </div>
            </td>
          </tr>
        </table>
      </div>
    </td>
  </tr>
  <tr>
    <td class="label-bg">
      <div class="form-label">Apellidos y Nombres</div>
    </td>
    <td>
      <div>{{repleg}}</div>
    </td>
    <td class="label-bg">
      <div class="form-label">Teléfono Fijo</div>
    </td>
    <td>
      <div>{{telpri}}</div>
    </td>
  </tr>
  <tr>
    <td class="label-bg">
      <div class="form-label">Celular</div>
    </td>
    <td>
      <div>{{celpri}}</div>
    </td>
    <td class="label-bg">
      <div class="form-label">Correo electrónico</div>
    </td>
    <td>
      <div>{{emailpri}}</div>
    </td>
  </tr>

</table>

<!-- Section 4: Datos del Contacto Administrativo -->
<div class="section-header" style="margin-bottom: 0px">
