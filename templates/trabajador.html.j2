                <td class="border-t" style="height: 20px;">{{resguardo}}</td>
                <td class="label border-t">Pueblo Indígena</td>
                <td class="border-t">{{pueblo_indigena}}</td>
            </tr>
        </tbody>
    </table>
</div>

<div class="three-column">
