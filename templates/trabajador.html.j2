                    <td><span class="small-checkbox"></span></td>
                </tr>
                <tr>
                    <td class="text-left">Madre Comunitaria</td>
                    <td><span {% if tipafi=='4' %} class="small-checkbox active" {% else %} class="small-checkbox" {%
                            endif %}></span></td>
                    <td class="text-left">Facultativos</td>
                    <td><span {% if tipafi=='63' %} class="small-checkbox active" {% else %} class="small-checkbox" {%
                            endif %}></span></td>
                    <td><span class="small-checkbox"></span></td>
                    <td>Menos de 1,5 SMMLV</td>
                    <td><span {% if tipafi=='67' %} class="small-checkbox active" {% else %} class="small-checkbox" {%
                            endif %}></span></td>
                    <td><span class="small-checkbox"></span></td>
                    <td><span class="small-checkbox"></span></td>
                </tr>
                <tr>
                    <td class="text-left">Veteranos</td>
                    <td><span class="small-checkbox"></span></td>
                    <td class="text-left">Colombiano en el exterior</td>
                    <td><span {% if tipafi=='69' %} class="small-checkbox active" {% else %} class="small-checkbox" {%
                            endif %}></span> </td>
                    <td><span class="small-checkbox"></span></td>
                    <td>Más de 1,5 SMMLV</td>
                    <td><span class="small-checkbox"></span></td>
                    <td><span {% if tipafi=='64' %} class="small-checkbox active" {% else %} class="small-checkbox" {%
                            endif %}></span></td>
                    <td><span {% if tipafi=='10' %} class="small-checkbox active" {% else %} class="small-checkbox" {%
                            endif %}></span></td>
                </tr>
                <tr>
                    <td class="text-left">Trabajador Dependiente</td>
                    <td><span {% if tipafi=='1' %} class="small-checkbox active" {% else %} class="small-checkbox" {%
                            endif %}></span></td>
                    <td class="text-left">Trab. Independiente</td>
                    <td><span {% if tipafi=='65' %} class="small-checkbox active" {% else %} class="small-checkbox" {%
                            endif %}></span> </td>
                    <td><span {% if tipafi=='3' %} class="small-checkbox active" {% else %} class="small-checkbox" {%
                            endif %}></span> </td>
