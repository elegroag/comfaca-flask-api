{% block content %}
<!-- Header -->
<div class="header">
    <div class="header-left">
        <div class="logo-section">
            <div class="w-100"><img src="img/logo-min.png" alt="COMFACA Logo" style="width: 130px; height: 60px;"></div>
            <strong>Sede Administrativa:</strong> Carrera 11 No. 10 - 34<br>
            <strong>Centro Múltiple de Servicio Comfaca:</strong> Tranev. 6a. calle 12 av. Bruno del Piero<br>
