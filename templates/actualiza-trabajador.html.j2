                <tr>
                    <td class="label">Banco:</td>
                    <td class="input"></td>
                    <td class="label">Tipo de Cuenta:</td>
                    <td class="input"></td>
                </tr>
                <tr>
                    <td colspan="4" class="label">No. Cuenta Bancaria:</td>
                </tr>
                <tr>
                    <td colspan="4" class="input" style="min-height: 25px;"></td>
